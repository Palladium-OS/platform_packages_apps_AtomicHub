<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="3"
        android:rowOrderPreserved="true"
        android:columnOrderPreserved="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/mcstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ffb1d4"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="25dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:elevation="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/ivstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_statusbar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Statusbar"
                    android:textSize="20sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mcui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#b5b4ff"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            android:layout_rowWeight="2"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:elevation="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/ivui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="UI"
                    android:textSize="20sp" />


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:id="@+id/mclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#84ffda"
            android:layout_row="3"
            android:layout_column="0"
            app:cardCornerRadius="25dp"
            android:layout_margin="10dp"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:layout_columnWeight="3"
            android:layout_columnSpan="3"
            android:elevation="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/ivlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lockscreen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Lockscreen"
                    android:textSize="20sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/mclogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="0dp"
            android:gravity="center"
            app:cardElevation="0dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:elevation="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/ivlogo"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_logo" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mcmisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#c7ffb4"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_rowWeight="2"
            app:cardCornerRadius="25dp"
            android:layout_margin="10dp"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:elevation="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/ivmisc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_misc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Misc"
                    android:textSize="20sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mctheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFEA69"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="2"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            android:elevation="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/ivtheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_theme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"

                    android:text="Theme"
                    android:textSize="20sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </GridLayout>

</LinearLayout>
